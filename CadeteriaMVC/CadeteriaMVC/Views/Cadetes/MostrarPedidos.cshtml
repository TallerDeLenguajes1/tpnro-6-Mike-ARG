@model List<CadeteriaMVC.Entidades.Pedido>
@{ ViewData["Title"] = "Mis pedidos";}

<div class="text-center">
    <h3>Mis Pedidos</h3>
</div>

<a class="btn btn-primary" href="/Pedidos/Index2" role="button">Tomar pedidos</a>

<table class="table">
    <tr>
        <th>Número de pedido</th>
        <th>Pedido</th>
        <th>Cliente</th>
        <th>Cadete</th>
        <th>Tipo de pedido</th>
        <th>Estado</th>
        <th>Cupón</th>
        <th>Valor del pedido</th>
        <th>Modificar estado</th>
    </tr>

    @foreach (CadeteriaMVC.Entidades.Pedido P in Model)
    {
<tr>
    <td>@P.Id</td>
    <td>@P.Observacion</td>
    <td>@P.Cliente</td>
    <td>@P.Cadete</td>
    <td>@P.TipoPedido</td>
    <td>@P.Estado</td>
    @{ if (P.TieneCupon == true)
        {
            <td>Sí</td>
        }
        else
        {
            <td>No</td>
        }
    }
    <td>@P.CostoPedido</td>
    @{
        if (P.Estado != CadeteriaMVC.Entidades.Estado.Entregado)
        {
            <td>@Html.ActionLink("Modificar estado", "UpdateEstado", "Pedidos", new { id = P.Id })</td>
        }
    }
</tr>
    }
</table>
