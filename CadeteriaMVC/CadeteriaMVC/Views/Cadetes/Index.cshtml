@model List<CadeteriaMVC.ViewModel.CadeteViewModel>
@{ ViewData["Title"] = "Cadetes";

    RepositorioCadete R = new RepositorioCadete();

}

<a class="btn btn-primary" href="AltaCadete" role="button">Crear Cadete</a>

<div class="text-center">
    <h3>Listado de cadetes</h3>
</div>

<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Telefono</th>
        <th>Vehiculo</th>
        <th>Jornal</th>
        <th>Pedidos</th>
        <th>Modificar</th>
        <th>Eliminar</th>
    </tr>

    @foreach (CadeteriaMVC.ViewModel.CadeteViewModel C in Model)
    {
        <tr>
            <td>@C.Nombre</td>
            <td>@C.Direccion</td>
            <td>@C.Telefono</td>
            <td>@C.TipoVehiculo</td>
            <td>@R.CalcularJornal(C.ID)</td>
            <td>@Html.ActionLink("Ver pedidos", "MostrarPedidos", new { id = C.ID })</td>
            <td>@Html.ActionLink("Modificar", "UpdateCadete", new { id = C.ID })</td>
            <td>@Html.ActionLink("Eliminar", "BajaCadete", new { id = C.ID })</td>
        </tr>
    }
</table>